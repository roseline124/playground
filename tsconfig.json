{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "dist",
    "strict": true, // --strictFunctionTypes: arrow 형식으로 메서드 타입 정의 시 함수 파라미터가 반공변성을 띄게 된다
    "esModuleInterop": false,
    "skipLibCheck": true,
    "downlevelIteration": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
