{
  "compilerOptions": {
    "outDir": "dist",
    "strict": true, // --strictFunctionTypes: arrow 형식으로 메서드 타입 정의 시 함수 파라미터가 반공변성을 띄게 된다
    "esModuleInterop": true,
    "skipLibCheck": true,
    "downlevelIteration": true,
    "target": "es2020", // Node.js 14
    "lib": ["es2020"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
