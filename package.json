{
  "name": "playground",
  "version": "1.0.0",
  "description": "나의 작고 소중한 놀이터",
  "main": "src/index.ts",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "test": "ava --verbose"
  },
  "author": "roseline124",
  "license": "ISC",
  "devDependencies": {
    "@types/fxjs": "^0.15.0",
    "@types/jest": "^26.0.24",
    "@types/strict-uri-encode": "^2.0.0",
    "ava": "^3.15.0",
    "jest": "^27.0.6",
    "ts-jest": "^27.0.3",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.3.5"
  },
  "ava": {
    "files": [
      "src/**/test/*"
    ],
    "timeout": "1m",
    "nonSemVerExperiments": {
      "nextGenConfig": true,
      "configurableModuleFormat": true
    },
    "extensions": {
      "ts": "module"
    },
    "nodeArguments": [
      "--loader=ts-node/esm"
    ]
  },
  "dependencies": {
    "fxjs": "^0.21.3",
    "reflect-metadata": "^0.1.13",
    "strict-uri-encode": "^2.0.0"
  }
}
